{
  "name": "remcostoeten-all-in-one-dashboard",
  "version": "0.1",
  "scripts": {
    "turbo": "next dev --turbo",
    "dev:next": "next dev",
    "dev": "run-p dev:*",
    "build": "next build",
    "buildd": "pnpm run db:migrate && p build",
    "start": "next start",
    "build-stats": "cross-env ANALYZE=true npm run build",
    "clean": "rimraf .next .swc out coverage",
    "lint": "next lint",
    "format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "format": "next lint --fix && prettier '**/*.{json,yaml}' --write --ignore-path .gitignore",
    "typecheck": "tsc --noEmit --pretty",
    "commit": "git add * ; cz",
    "push": "git add * ; cz ;git push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "dotenv -c -- drizzle-kit studio"
  },
  "dependencies": {
    "@clerk/localizations": "^2.4.3",
    "@clerk/nextjs": "^5.1.3",
    "@hookform/resolvers": "^3.4.2",
    "@libsql/client": "^0.6.1",
    "@logtail/pino": "^0.4.21",
    "@radix-ui/react-slot": "^1.0.2",
    "@sentry/nextjs": "^8.8.0",
    "@t3-oss/env-nextjs": "^0.10.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.31.1",
    "framer-motion": "^11.2.10",
    "lucide-react": "^0.390.0",
    "next": "^14.2.3",
    "next-intl": "^3.14.1",
    "pino": "^9.1.0",
    "pino-pretty": "^10.3.1",
    "react": "~18.3.1",
    "react-dom": "~18.2.0",
    "react-hook-form": "^7.51.5",
    "sass": "^1.77.4",
    "sharp": "^0.33.4",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cz-commitlint": "^19.2.0",
    "@commitlint/types": "^19.0.3",
    "@faker-js/faker": "^8.4.1",
    "@next/bundle-analyzer": "^14.2.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^20.12.13",
    "@types/react": "^18.3.3",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "autoprefixer": "^10.4.19",
    "checkly": "^4.6.3",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.1",
    "dotenv-cli": "^7.4.2",
    "drizzle-kit": "^0.22.4",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-next": "^14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest-dom": "^5.4.0",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-tailwindcss": "^3.17.0",
    "eslint-plugin-testing-library": "^6.2.2",
    "eslint-plugin-unused-imports": "^3.2.0",
    "http-server": "^14.1.1",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "semantic-release": "^23.1.1",
    "start-server-and-test": "^2.0.3",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "author": "Remco Stoeten (https://github.com/remcostoeten)"
}
