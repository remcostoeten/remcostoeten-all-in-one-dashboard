            "color": "foldercolorizer.Platinum"
        },
        {
            "folderPath": "personal-panel/src/app/[locale]/(unauth)/tasks/",
            "color": "foldercolorizer.PaleTaupe",
            "badge": "‚úçÔ∏è"
        },
        {
